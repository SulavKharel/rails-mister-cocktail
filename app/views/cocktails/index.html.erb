
<div class="container ">
  <div class="wrapper">
    <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="card-deck m-2">
        <%= render "card", cocktail: cocktail %>
          </div>
          <% cocktail.ingredients.each do |ingredient| %>
              <h2><%= ingredient.name %></h2>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
