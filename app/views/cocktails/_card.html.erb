
<div class="card-deck">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1509669803555-fd5edd8d5a41?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <% cocktail.doses.each do |dose| %>
        <p><%= dose.description %> <%= dose.ingredient.name %> </p>
        <% end %>
<!--         <a href="http://localhost:3000/cocktails/${:id}" class="btn btn-primary">Details</a> -->
<%= link_to "Details", cocktail_path(cocktail), class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>
</div>
