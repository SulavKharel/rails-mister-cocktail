
<div class="card-deck">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <% cocktail.doses.each do |dose| %>
        <p><%= dose.description %> <%= dose.ingredient.name %> </p>
        <% end %>
        <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>
</div>
