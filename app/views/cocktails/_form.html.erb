<div class="container">
  <div class="wrapper">
    <div class="row">
      <div class="col-12">
        <%= simple_form_for(@cocktail) do |f| %>
          <% if @cocktail.errors.any? %>
            <div class="errors-container">
              <ul>
                <% @cocktail.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.input :name %>
          <%= f.submit "add a cocktail", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

