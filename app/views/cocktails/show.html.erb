<div class="container">
  <div class="wrapper">
    <div class="row">
      <div class="col-12">
        <h1>Show a specific cocktail </h1>
        <h2><%= @cocktail.name %></h2>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %></li>
        <%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Really?"} %>
        <% end %>
      </div>
    </div>
        <%= link_to "home", root_path %>
  </div>
</div>
